<h1>登録済みのユーザー一覧</h1>
<table class="table">
  <thead>
    <tr>
      <th>id</th>
      <th>名前</th>
      <th>登録日</th>
      <th>投稿数</th>
      <th>管理権限</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
        <tr>
          <td><%= user.id %></td>
      	<td><%= user.name %></td>
      	<td><%= user.created_at %></td>
        <td><%= user.tasks.count %></td>
        <td><%= user.admin? %></td>
        <td><button type="button" class="btn btn-default"><%= link_to "詳細", admin_user_path(user.id) %></button></td>
        <td><button type="button" class="btn btn-default"><%= link_to "編集", edit_admin_user_path(user.id) %></button></td>
        <td><button type="button" class="btn btn-default"><%= link_to "削除", admin_user_path(user.id), method: :delete %></button></td>
        </tr>
      <% end %>
  </tbody>
</table>
<%= link_to "ユーザーを作成する", new_admin_user_path %>
